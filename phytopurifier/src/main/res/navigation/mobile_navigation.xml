<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="ca.algaerithms.inc.it.phytoplanktonairsystems.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_about"
        android:name="ca.algaerithms.inc.it.phytoplanktonairsystems.ui.about.AboutFragment"
        android:label="@string/about"
        tools:layout="@layout/fragment_about" />

    <fragment
        android:id="@+id/nav_settings"
        android:name="ca.algaerithms.inc.it.phytoplanktonairsystems.ui.settings.SettingsFragment"
        android:label="@string/settings"
        tools:layout="@layout/fragment_settings">

        <action
            android:id="@+id/action_nav_settings_to_accountInfoFragment"
            app:destination="@id/accountInfoFragment" />
    </fragment>

    <fragment
        android:id="@+id/termsOfServiceFragment"
        android:name="ca.algaerithms.inc.it.phytoplanktonairsystems.ui.settings.TermsOfServiceFragment"
        android:label="Terms of Service"
        tools:layout="@layout/fragment_terms_of_service" />

    <fragment
        android:id="@+id/accountInfoFragment"
        android:name="ca.algaerithms.inc.it.phytoplanktonairsystems.ui.settings.AccountInfoFragment"
        android:label="@string/account_info_title"
        tools:layout="@layout/fragment_account_info" />

</navigation>
