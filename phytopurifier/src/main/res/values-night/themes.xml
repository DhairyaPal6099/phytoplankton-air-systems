<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme (dark) -->
    <style name="Theme.PhytoplanktonAirSystems" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowSplashScreenBackground" tools:targetApi="31">@color/teal</item>
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Window/UI config -->
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Optional NoActionBar alias -->
    <style name="Theme.PhytoplanktonAirSystems.NoActionBar" parent="Theme.PhytoplanktonAirSystems" />

    <!-- Toolbar overlays (optional) -->
    <style name="Theme.PhytoplanktonAirSystems.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.PhytoplanktonAirSystems.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="CircleImageView">
        <item name="civ_border_width">2dp</item>
        <item name="civ_border_color">@color/imageBorderColor</item>
    </style>


</resources>
