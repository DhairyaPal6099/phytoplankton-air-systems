<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/floatingVideoContainer"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:visibility="gone"
        android:background="@drawable/rounded_corners"
        android:elevation="10dp"
        android:layout_margin="16dp"
        android:layout_gravity="top|end">

        <!-- Drag handle at the top -->
        <View
            android:id="@+id/dragHandle"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@color/faded_black"
            android:layout_gravity="top" />

        <!-- Close button at top right, above drag handle -->
        <ImageView
            android:id="@+id/closeFloatingWebView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            android:layout_gravity="top|end"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/close" />

        <!-- WebView fills the container but below dragHandle and close button -->
        <WebView
            android:id="@+id/floatingWebView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp" />

    </FrameLayout>



</RelativeLayout>