<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:fillViewport="true"
    tools:context=".view.ui.home.insights.InsightsFragment">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/insights_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/insights"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <ImageView
                android:layout_width="53dp"
                android:layout_height="35dp"
                android:src="@drawable/community" />

        </LinearLayout>

        <!-- Search bar -->
        <EditText
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Search..."
            android:background="@drawable/rounded_corners"
            android:padding="10dp"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:layout_marginBottom="16dp"/>

        <!-- Cards row (3 cards) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#EAF9E4"
                android:layout_margin="4dp">

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#EAF9E4"
                android:layout_margin="4dp">

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#EAF9E4"
                android:layout_margin="4dp">


            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"

            android:text="Add a subheading    " />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"

            android:text="Add a subheading     " />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"

            android:text="Add a subheading" />

    </LinearLayout>

        <!-- Section: Videos -->
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Videos"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="24dp"/>

        <!-- Subsection: What is Phytoplankton -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="fill_horizontal"
            android:layout_marginTop="8dp">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="What is Phytoplankton"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginStart="150dp"
                android:text="View All"
                android:textColor="@color/dark_grey"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/phytoplanktonVideosRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:overScrollMode="never"
            android:nestedScrollingEnabled="false"
            android:scrollbars="none"
            android:orientation="horizontal"/>

        <!-- Subsection: Intermediate -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="fill_horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Intermediate"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginStart="220dp"

                android:text="View All"
                android:textColor="@color/dark_grey"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bruhVideosRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:orientation="horizontal"/>

        <!-- Subsection: Advanced -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="fill_horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Advanced"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginStart="230dp"
                android:text="View All"
                android:textColor="@color/dark_grey"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/omgVideosRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:orientation="horizontal"/>

        <!-- Articles -->
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Articles"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="24dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/articlesRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:nestedScrollingEnabled="false"/>

    </LinearLayout>
</ScrollView>