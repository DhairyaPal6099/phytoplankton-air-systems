<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".view.ui.home.insights.InsightsFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/insights_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/insights"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <ImageView
                android:layout_width="53dp"
                android:layout_height="35dp"
                android:src="@drawable/community" />

        </LinearLayout>


        <!-- Sample Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/ocean_teal"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:padding="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="105dp"
                    android:layout_height="98dp"
                    android:layout_gravity="left"
                    android:src="@drawable/algaerithms" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/did_you_know"
                    android:fontFamily="@font/quicksand_bold"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_bold"
                    android:textSize="12sp"
                    android:text="@string/test_info"
                    android:layout_marginTop="4dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Add more cards or sections -->

        <Spinner
            android:id="@+id/video_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <WebView
            android:id="@+id/video_webview"
            android:layout_width="match_parent"
            android:layout_height="234dp"
            android:layout_weight="1"
            tools:ignore="WebViewLayout" />
    </LinearLayout>

</ScrollView>