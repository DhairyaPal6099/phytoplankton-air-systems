<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".view.ui.home.dashboard.DashboardFragment">

    <!-- Scrollable Dashboard -->
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/dashboard_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- Title Row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/Dashboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="@string/dashboard"
                    android:textSize="30sp" />

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/dashboard" />
            </LinearLayout>

            <!-- AQI Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/aqi_card"
                android:layout_width="198dp"
                android:layout_height="198dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/dashboard_card"
                app:cardCornerRadius="90dp"
                app:cardElevation="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ProgressBar
                        android:id="@+id/aqi_progress_bar"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="234dp"
                        android:layout_height="219dp"
                        android:layout_centerInParent="true"
                        android:indeterminate="false"
                        android:max="100"
                        android:progress="75" />

                    <TextView
                        android:id="@+id/text_aqi_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="60dp"
                        android:text=""
                        android:textSize="35sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/aqi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_aqi_value"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="13dp"
                        android:text="@string/aqi"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/calculated_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/aqi"
                        android:layout_marginTop="-5dp"
                        android:layout_centerHorizontal="true"
                        android:text="@string/calculated"
                        android:textStyle="bold" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Notification Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/notification_card"
                android:layout_width="334dp"
                android:layout_height="75dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/dashboard_card"
                app:cardCornerRadius="15dp"
                app:cardElevation="6dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/sensor_symbol"
                        android:layout_width="48dp"
                        android:layout_height="45dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="16dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/square_leaf" />

                    <TextView
                        android:id="@+id/notification_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/sensor_symbol"
                        android:layout_alignTop="@id/sensor_symbol"
                        android:layout_marginStart="8dp"
                        android:text="@string/notifcation_sample"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/notification_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/notification_title"
                        android:layout_alignStart="@id/notification_title"
                        android:text="@string/notifcation_sample"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:ellipsize="end" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Sensor Cards - Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardBackgroundColor="@color/dashboard_card"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <TextView
                        android:id="@+id/text_light_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:gravity="center"
                        android:text=""
                        android:layout_marginStart="60dp"
                        android:textStyle="bold"
                        android:textSize="55dp" />

                    <TextView
                        android:id="@+id/text_light"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="75dp"
                        android:text="@string/light"
                        android:textSize="18dp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardBackgroundColor="@color/dashboard_card"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <TextView
                        android:id="@+id/text_proximity_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:gravity="center"
                        android:text=""
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:textStyle="bold"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/text_proximity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginTop="75dp"
                        android:text="@string/proximity"
                        android:textSize="18dp" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Sensor Cards - Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardBackgroundColor="@color/dashboard_card"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <TextView
                        android:id="@+id/text_turbidity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:gravity="center"
                        android:text=""
                        android:layout_marginStart="60dp"
                        android:textStyle="bold"
                        android:textSize="55dp" />

                    <TextView
                        android:id="@+id/text_turbidity_value"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="75dp"
                        android:text="@string/turbidity"
                        android:textSize="18dp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardBackgroundColor="@color/dashboard_card"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <TextView
                        android:id="@+id/text_waterLevel_value"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Water Level
                        (Coming soon)"
                        android:textStyle="bold"
                        android:textSize="16sp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
