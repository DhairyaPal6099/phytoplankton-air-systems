<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/lagoon_blue"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clipChildren="false">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/account_info_header_bg">

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="-60dp"
                    app:cardCornerRadius="60dp"
                    app:cardElevation="6dp">

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profile"
                        android:contentDescription="@string/profile_picture" />
                </androidx.cardview.widget.CardView>
            </FrameLayout>

        <!-- Form Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="60dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/full_name"
                    android:textStyle="bold"
                    android:textColor="@color/midnight_moss"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/username_input"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/semirounded_corners"
                    android:backgroundTint="@color/driftwood_beige"
                    android:paddingHorizontal="12dp"
                    android:inputType="textPersonName"
                    android:textColor="#000"
                    android:hint="@string/enter_your_name" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/email_address_2"
                    android:textStyle="bold"
                    android:textColor="@color/midnight_moss"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/email_input"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/semirounded_corners"
                    android:backgroundTint="@color/driftwood_beige"
                    android:paddingHorizontal="12dp"
                    android:inputType="textEmailAddress"
                    android:hint="@string/enter_your_email_2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/phone_number_2"
                    android:textStyle="bold"
                    android:textColor="@color/midnight_moss"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/phone_input"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/semirounded_corners"
                    android:backgroundTint="@color/driftwood_beige"
                    android:paddingHorizontal="12dp"
                    android:inputType="phone"
                    android:maxLength="12"
                    android:textColor="#000"
                    android:hint="@string/enter_phone_number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/birthday"
                    android:textStyle="bold"
                    android:textColor="@color/midnight_moss"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/birthday_input"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/semirounded_corners"
                    android:backgroundTint="@color/driftwood_beige"
                    android:paddingHorizontal="12dp"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none"
                    android:textColor="#000"
                    android:hint="@string/yyyy_mm_dd_2" />
            </LinearLayout>

            <Button
                android:id="@+id/update_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/update_2"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_corners"
                android:layout_marginTop="24dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>