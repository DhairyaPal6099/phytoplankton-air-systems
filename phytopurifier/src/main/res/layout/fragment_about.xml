<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFCF7">

    <LinearLayout
        android:id="@+id/about_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- App Title & Mission -->
        <TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phytoplankton Air Systems ðŸŒ¿"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2F3C2F"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/app_mission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Greener air. Smarter tech. Powered by nature."
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#4D4D4D" />

        <!-- App Story -->
        <TextView
            android:id="@+id/app_story"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="We started as four students building a capstone â€” and ended up building a mission. What began as a class project turned into a passion for clean air, sustainable design, and meaningful technology."
            android:textSize="15sp"
            android:textColor="#4D4D4D"
            android:lineSpacingExtra="4dp" />

        <!-- Team Header -->
        <TextView
            android:id="@+id/team_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meet the Algae Crew ðŸ‘¥"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#2F3C2F"
            android:layout_marginTop="32dp" />


            <LinearLayout
                android:id="@+id/team_scroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Cards will be added here programmatically or via layout reuse -->
            </LinearLayout>


    </LinearLayout>
</ScrollView>
