<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFCF7">

    <LinearLayout
        android:id="@+id/about_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- App Title & Mission -->
        <TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phytoplankton Air Systems ðŸŒ¿"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2F3C2F"
            android:gravity="center" />

        <TextView
            android:id="@+id/app_mission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Greener air. Smarter tech. Powered by nature."
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:textColor="#4D4D4D" />

        <!-- App Story -->
        <TextView
            android:id="@+id/app_story"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="We started as four students building a capstone â€” and ended up building a mission. What began as a class project turned into a passion for clean air, sustainable design, and meaningful technology."
            android:textSize="15sp"
            android:textColor="#4D4D4D"
            android:lineSpacingExtra="4dp" />

        <!-- Team Header -->
        <TextView
            android:id="@+id/team_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meet the Algae Crew ðŸ‘¥"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#2F3C2F"
            android:layout_marginTop="32dp" />

        <!-- Team Grid -->
        <GridLayout
            android:id="@+id/team_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_marginTop="16dp"
            android:rowOrderPreserved="false"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:useDefaultMargins="true">

            <!-- Sanskriti -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_sanskriti"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/icon_sanskriti"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:src="@drawable/ic_sanskriti"
                        android:background="@drawable/circle_mask"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sanskriti"
                        android:textSize="14sp"
                        android:textColor="#2F3C2F"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Dharmik -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_dharmik"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/icon_dharmik"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:src="@drawable/ic_dharmik"
                        android:background="@drawable/circle_mask"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dharmik"
                        android:textSize="14sp"
                        android:textColor="#2F3C2F"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Dhairya -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_dhairya"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/icon_dhairya"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:src="@drawable/ic_dhairya"
                        android:background="@drawable/circle_mask"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dhairya"
                        android:textSize="14sp"
                        android:textColor="#2F3C2F"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Julian -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_julian"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/icon_julian"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:src="@drawable/ic_julian"
                        android:background="@drawable/circle_mask"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Julian"
                        android:textSize="14sp"
                        android:textColor="#2F3C2F"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>

    </LinearLayout>
</ScrollView>
