<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFCF7">

    <LinearLayout
        android:id="@+id/about_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- App Info Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/appInfoCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#ECEE81">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/app_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phytoplankton Air Systems ðŸª¸"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#2F3C2F"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/app_mission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The Plant That Powers Your Air"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#4D4D4D" />

                <TextView
                    android:id="@+id/app_story"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Air pollution is often invisible â€” and so are the solutions meant to fix it. We designed one thatâ€™s alive, visible, and intelligent. We began as four students tackling a capstone â€” and ended up building a mission. What started as a classroom project evolved into a shared passion for clean air, sustainable design, and purposeful technology."
                    android:textSize="14sp"
                    android:textColor="#4D4D4D"
                    android:lineSpacingExtra="4dp"
                    android:justificationMode="inter_word" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Team Header -->
        <TextView
            android:id="@+id/team_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ§ª Team at Algaerithms Inc."
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#2F3C2F"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <!-- Vertical Scroll for Cards -->
        <LinearLayout
            android:id="@+id/team_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</ScrollView>
