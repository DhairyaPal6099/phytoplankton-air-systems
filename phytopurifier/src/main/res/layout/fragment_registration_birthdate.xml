<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/registration_birthdate"
    android:background="@drawable/registrationbg"
    tools:context=".ui.registration.RegistrationBirthdateFragment">

    <LinearLayout
        android:id="@+id/birthdate_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/birthdate"
            android:textColor="@color/forest_green"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginBottom="12dp" />

        <DatePicker
            android:id="@+id/registrationBirthdate_datePicker"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/registrationBirthdate_continueButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners"
            android:ems="8"
            android:text="@string/continue_button"
            android:layout_marginTop="24dp"
            android:layout_gravity="center" />

    </LinearLayout>

    <Button
        android:id="@+id/registrationBirthdate_skipButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="30dp"
        android:background="@color/transparent"
        android:text="Skip"
        android:textColor="@color/forest_green"
        android:textSize="15dp"
        android:textStyle="bold" />
</RelativeLayout>