<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/login_profile"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="-100dp"
            android:src="@drawable/profile" />

        <EditText
            android:id="@+id/login_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners"
            android:ems="15"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:layout_marginTop="50dp"
            android:padding="15dp"
            android:textColor="@color/white"
            android:textColorHint="@color/fade"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/login_Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_username"
            android:background="@drawable/rounded_corners"
            android:ems="15"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/fade"
            android:hint="Password"
            android:padding="15dp"
            android:textSize="20sp"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:ems="7"
            android:background="@drawable/rounded_corners"
            android:text="Login"
            />

        <Button
            android:id="@+id/login_forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Forgot Password?"
            android:background="@color/transparent" />

    </LinearLayout>

    <!-- "Create an Account" Button at the Bottom -->
    <Button
        android:id="@+id/login_createAccountButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/signup_button_background"
        android:ems="15"
        android:text="Create an Account" />

</RelativeLayout>